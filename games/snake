<!DOCTYPE html>
<html lang="de">
<head>
  <meta charset="UTF-8">
  <title>Snake</title>
  <style>
    body { background: #111; display: flex; flex-direction: column; align-items: center; color: white; font-family: sans-serif; }
    canvas { background: #111; margin-top: 20px; }
    #score { margin-top: 10px; font-size: 18px; }
  </style>
</head>
<body>
  <h1>Snake</h1>
  <canvas id="game" width="400" height="400"></canvas>
  <div id="score">Score: 0</div>
  <script>
    const canvas = document.getElementById('game');
    const ctx = canvas.getContext('2d');
    const grid = 20;
    let snake = [{x: 160, y: 160}];
    let dx = grid, dy = 0;
    let apple = {x: 200, y: 200};
    let frame = 0;
    let score = 0;
    let gameOver = false;

    function loop() {
      if (gameOver) return alert("Game Over! Score: " + score);

      requestAnimationFrame(loop);
      if (++frame % 5 !== 0) return;

      const head = {x: snake[0].x + dx, y: snake[0].y + dy};
      
      // Kollision mit WÃ¤nden
      if (head.x < 0 || head.x >= canvas.width || head.y < 0 || head.y >= canvas.height) {
        gameOver = true;
      }
      
      // Kollision mit sich selbst
      for (let segment of snake) {
        if (head.x === segment.x && head.y === segment.y) {
          gameOver = true;
        }
      }

      snake.unshift(head);

      // Apple essen
      if (head.x === apple.x && head.y === apple.y) {
        score++;
        document.getElementById('score').textContent = "Score: " + score;
        apple.x = Math.floor(Math.random() * 20) * grid;
        apple.y = Math.floor(Math.random() * 20) * grid;
      } else {
        snake.pop();
      }

      ctx.clearRect(0, 0, canvas.width, canvas.height);
      ctx.fillStyle = 'lime';
      snake.forEach(p => ctx.fillRect(p.x, p.y, grid-2, grid-2));
      ctx.fillStyle = 'red';
      ctx.fillRect(apple.x, apple.y, grid-2, grid-2);
    }

    document.addEventListener('keydown', e => {
      if (e.key === 'ArrowUp' && dy === 0) { dx = 0; dy = -grid; }
      if (e.key === 'ArrowDown' && dy === 0) { dx = 0; dy = grid; }
      if (e.key === 'ArrowLeft' && dx === 0) { dx = -grid; dy = 0; }
      if (e.key === 'ArrowRight' && dx === 0) { dx = grid; dy = 0; }
    });

    loop();
  </script>
</body>
</html>
