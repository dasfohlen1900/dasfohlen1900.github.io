let current = 0;
let scores = {A:0,B:0,C:0,D:0};

function showQuestion() {
    document.getElementById("question").innerText = quiz[current].q;
    const btns = document.querySelectorAll("#answers button");
    btns.forEach((b,i)=>{ b.innerText = quiz[current].a[i]; });
    document.getElementById("progress").innerText = `Frage ${current+1} von ${quiz.length}`;
}

function answer(choice) {
    scores[choice]++;
    current++;
    if(current < quiz.length) {
        showQuestion();
    } else {
        showResult();
    }
}

function showResult() {
    document.getElementById("answers").style.display = "none";
    document.getElementById("progress").style.display = "none";
    
    // Auswertung nach deiner Logik
    let resultText = "";
    if(scores.A >= 9) {
        resultText = "âœ… Android passt am besten zu dir.<br>Grund: Du willst Freiheit, Anpassbarkeit und Experimente.";
    } else if(scores.C >= 6) {
        resultText = "ðŸ“± Apple kÃ¶nnte gut passen.<br>Grund: Du achtest sehr auf Design & Erlebnis.";
    } else if(scores.D >= 6) {
        resultText = "ðŸ’° Preis-Leistung ist dir wichtig â€“ Android bietet viele Optionen.";
    } else {
        resultText = "ðŸ“± Beide Systeme sind mÃ¶glich â€“ du magst ein ausgewogenes Erlebnis.";
    }

    document.getElementById("result").innerHTML = resultText;
}

showQuestion();
